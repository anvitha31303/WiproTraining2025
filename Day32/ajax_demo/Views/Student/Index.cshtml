<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Please enter the details below.</h3>
        </div>
        <div class="panel-body">
            <div class="form-group col-md-5">
                <label>Student Name</label>
                <input type="text" name="StudentName" id="StudentName" class="form-control" placeholder="Enter Student Name" required />
            </div>
            <div class="form-group col-md-5">
                <label>Student Address</label>
                <input type="text" name="StudentAddress" id="StudentAddress" class="form-control" placeholder="Enter Student Address" required />
            </div>

            <div class="form-group col-md-1">
                <div style="float: right; display:inline-block;">
                    <input class="btn btn-primary" name="submitButton" id="btnSave" value="Save" type="button">
                </div>
            </div>
        </div>
    </div>
    <hr />

    <table id="tblStudent" class="table table-bordered table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student Name</th>
                <th>Student Address</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // ✅ Function to load student data
    function LoadData() {
        $("#tblStudent tbody").empty(); // Clear old rows
        $.ajax({
            type: 'GET', // ✅ Use GET for fetching data
            url: '@Url.Action("GetStudent", "Student")', // ✅ Include controller name
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, item) {
                    var row = "<tr>"
                        + "<td>" + item.studentId + "</td>"
                        + "<td>" + item.studentName + "</td>"
                        + "<td>" + item.studentAddress + "</td>"
                        + "</tr>";
                    $('#tblStudent tbody').append(row);
                });
            },
            error: function (xhr) {
                alert("Error: " + xhr.responseText);
            }
        });
        return false;
    }

    // ✅ Call LoadData when page loads
    $(document).ready(function () {
        LoadData();

        // ✅ Save button click event
        $('#btnSave').click(function () {
            var student = {
                StudentName: $('#StudentName').val(),
                StudentAddress: $('#StudentAddress').val()
            };

            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateStudent", "Student")',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(student),
                success: function (response) {
                    alert(response.message);
                    LoadData();
                },
                error: function (xhr) {
                    alert("Error: " + xhr.responseText);
                }
            });
        });
    });
</script>
